{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./core",
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["core/**/*"],
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ]
}
